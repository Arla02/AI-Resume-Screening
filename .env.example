# Google Gemini API Key
# Get yours free at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here

# OR use Groq (faster, generous free tier)
# Get yours free at: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# LLM Provider: "gemini" or "groq"
# If not set, auto-detects based on which API key is provided
LLM_PROVIDER=gemini

# Model Configuration (optional)
GEMINI_MODEL=gemini-2.0-flash
GROQ_MODEL=llama-3.3-70b-versatile
TEMPERATURE=0.3
MAX_TOKENS=4096

# Confidence Thresholds (optional)
CONFIDENCE_THRESHOLD_LOW=0.6
MATCH_SCORE_AMBIGUOUS_LOW=0.4
MATCH_SCORE_AMBIGUOUS_HIGH=0.7
